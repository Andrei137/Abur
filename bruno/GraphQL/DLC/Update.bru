meta {
  name: Update
  type: graphql
  seq: 4
}

post {
  url: {{url}}
  body: graphql
  auth: none
}

headers {
  Authorization: Bearer {{tokenDeveloper}}
}

body:graphql {
  mutation UpdateGame($game: GameInput!) {
    updateGame(id: 1, game: $game) {
      id
      name
      price
      releaseDate
      developer {
        username
        email
  
        studio
        website
      }
    }
  }
}

body:graphql:vars {
  {
    "game": {
      "name": "Life is Strange 2"
    }
  }
}
