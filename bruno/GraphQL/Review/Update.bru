meta {
  name: Update
  type: graphql
  seq: 5
}

post {
  url: {{url}}
  body: graphql
  auth: none
}

headers {
  Authorization: Bearer {{tokenCustomer}}
}

body:graphql {
  mutation UpdateReview($review: ReviewInput!) {
    updateReview(id: 0, review: $review) {
      id,
      rating,
      comment
      customer {
        firstName
      }
  		game {
          ... on Game {
              id
  						name
          }
          ... on DLC {
              id
              name
            	baseGame {
                name
              }
          }
      }
      customer {
        firstName
      }
    }
  }
}

body:graphql:vars {
  {
    "review": {
      "rating": 9
    }
  }
}
